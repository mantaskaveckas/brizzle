{
  "name": "brizzle",
  "version": "0.3.0",
  "description": "Rails-like generators for Next.js + Drizzle ORM projects",
  "type": "module",
  "bin": {
    "brizzle": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run test:run",
    "docs:dev": "cd docs && npm run start",
    "docs:build": "cd docs && npm run build"
  },
  "keywords": [
    "nextjs",
    "drizzle",
    "orm",
    "generator",
    "scaffold",
    "cli",
    "codegen",
    "brizzle"
  ],
  "author": "mantaskaveckas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantaskaveckas/brizzle.git"
  },
  "bugs": {
    "url": "https://github.com/mantaskaveckas/brizzle/issues"
  },
  "homepage": "https://github.com/mantaskaveckas/brizzle#readme",
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "commander": "^14.0.2",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/node": "^20",
    "@types/pluralize": "^0.0.33",
    "eslint": "^9",
    "husky": "^9",
    "lint-staged": "^15",
    "prettier": "^3",
    "tsup": "^8",
    "typescript": "^5",
    "typescript-eslint": "^8",
    "vitest": "^4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
